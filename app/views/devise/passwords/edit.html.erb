<div class="User-content">

    <h3>Change your password</h3>

    <%= form_for(resource, as: resource_name, url: reset_user_password_path, html: { method: :put, class: "Form" }) do |f| %>
        <%= render partial: "shared/error_messages", object: resource %>

        <%= f.hidden_field :reset_password_token %>

        <div class="Form-group">
            <%= f.label :password, "New password" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "Form-control" %>
        </div>

        <div class="Form-group">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "Form-control" %>
        </div>

        <div class="Form-group">
            <%= f.submit "Change my password", class: "button button--primary" %>
        </div>
    <% end %>
</div>

<div class="User-footer">
    <p class="u-pushTop20">
        <%= link_to "Know your password? Sign in" , new_user_session_path, class: "links u-links" %>
    </p>
</div>