<h2><%= t 'devise.invitations.edit.header' %></h2>

<div class="row">
  <div class="col-md-12">
    <%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put, class: "form-horizontal"} do |f| %>
      <%= devise_error_messages! %>

      <%= f.hidden_field :invitation_token %>

      <div class="form-group">
        <%= f.label :username, class: "control-label col-sm-3" %>
        <div class="col-sm-3">
          <%= f.text_field :username, class: "form-control" %></p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-3" %>
        <div class="col-sm-3">
          <%= f.password_field :password, class: "form-control" %></p>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-3" %>
        <div class="col-sm-3">
          <%= f.password_field :password_confirmation, class: "form-control" %></p>
        </div>
      </div>

      <div class="form-group form-actions">
        <div class="col-sm-offset-3 col-sm-3">
          <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
